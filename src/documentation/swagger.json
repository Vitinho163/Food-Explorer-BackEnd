                  },
                  "price": {
                    "type": "string",
                    "example": "25"
                  },
                  "description": {
                    "type": "string",
                    "example": "Rabanetes, folhas verdes e molho agridoce salpicados com gergelim. O pão naan dá um toque especial."
                  },
                  "category": {
                    "type": "string",
                    "example": "food"
                  },
                  "ingredients": {
                    "type": "array",
